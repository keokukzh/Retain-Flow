{
  "name": "retainflow-saas",
  "version": "1.0.0",
  "description": "AI-powered retention tool for creators and membership providers",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "build:api": "next build",
    "build:frontend": "next build",
    "pages:build": "next build",
    "pages:dev": "wrangler pages dev out",
    "pages:deploy": "npm run pages:build && wrangler pages deploy out",
    "deploy:staging": "npm run pages:build && wrangler pages deploy out --project-name=retainflow-staging",
    "deploy:prod": "npm run pages:build && wrangler pages deploy out --project-name=retainflow-prod",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:deploy": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "db:seed": "tsx prisma/seed.ts",
    "visual:reference": "backstop reference",
    "visual:test": "backstop test",
    "visual:approve": "backstop approve",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "chromatic": "chromatic --project-token=YOUR_TOKEN",
    "prepare": "husky"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@prisma/client": "^5.6.0",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.19",
    "@types/node": "^20.8.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "autoprefixer": "^10.4.0",
    "axios": "^1.6.0",
    "bcryptjs": "^2.4.3",
    "bullmq": "^4.15.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "cron": "^3.1.0",
    "date-fns": "^2.30.0",
    "discord.js": "^14.14.0",
    "framer-motion": "^10.18.0",
    "ioredis": "^5.3.0",
    "jose": "^5.1.0",
    "lucide-react": "^0.292.0",
    "next": "^14.0.0",
    "nodemailer": "^6.9.0",
    "postcss": "^8.4.0",
    "prisma": "^5.6.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "redis": "^4.6.0",
    "resend": "^2.0.0",
    "stripe": "^14.0.0",
    "swiper": "^10.3.1",
    "tailwindcss": "^3.3.0",
    "typescript": "^5.2.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@neondatabase/serverless": "^1.0.2",
    "@playwright/test": "^1.40.0",
    "@prisma/adapter-pg": "^6.18.0",
    "@storybook/addon-essentials": "^7.5.0",
    "@storybook/addon-interactions": "^7.5.0",
    "@storybook/addon-links": "^7.5.0",
    "@storybook/blocks": "^7.5.0",
    "@storybook/nextjs": "^7.5.0",
    "@storybook/react": "^7.5.0",
    "@storybook/test": "^7.5.0",
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/react": "^13.4.0",
    "@types/bcryptjs": "^2.4.0",
    "@types/cron": "^2.0.0",
    "@types/jsonwebtoken": "^9.0.0",
    "@types/nodemailer": "^6.4.0",
    "@vercel/next": "^4.13.4",
    "backstopjs": "^6.2.0",
    "chromatic": "^7.6.0",
    "eslint": "^8.52.0",
    "eslint-config-next": "^14.0.0",
    "eslint-config-prettier": "^9.0.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.5.2",
    "playwright": "^1.40.0",
    "prettier": "^3.0.0",
    "storybook": "^7.5.0",
    "tsx": "^4.0.0",
    "wrangler": "^4.44.0"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "**/*.{css,md,json}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
